{{< layout }}
{{$ title }}Edit Customer{{/ title }}

{{$ header }}

{{/ header }}

{{$ content}}
<div class="panel panel-default">
    <div class="panel-heading">{{Message}}</div>
    <div class="panel-body">

    {{< customer_modal}}

    {{/ customer_modal}}

        {{# customers}}
        <div class="row">
            <div class="col-md-3">
                <h3>Current Customer:</h3>
                <p><b>Customer:</b> {{ customerFirstName }} {{ customerLastName }} </p>
                <p><b>Type:</b> {{ customerType }} </p>
                <p><b>Street:</b> {{ customerStreet }} </p>
                <p><b>City:</b> {{ customerCity }} </p>
                <p><b>State:</b> {{ customerState }} </p>
                <p><b>Zip Code:</b> {{ customerZipCode }} </p>
                <p><b>Phone:</b> {{ customerPhone }} </p>
                <p><b>Email:</b> {{ customerEmail }} </p>
            </div>
            <div class="col-md-9">
                <form action="customers.php?action=update" method="post" autocomplete="off">
                    <div class="form-group">
                        <input type="hidden" class="form-control" name="customerID" value="{{customerID}}" >
                        <label for="customerType">Customer Type (1=Student, 2=Faculty/Staff/Alumn, 3=Public)</label>
                        <input type="number" class="form-control" name="customerType" maxlength="1" min="1" max="3" step="1" value="{{customerType}}" required>
                        <p id="customerTypeInvalidMessage"></p>
                    </div>
                    <div class="form-group">
                        <label for="customerFirstName">First Name</label>
                        <input type="text" class="form-control" name="customerFirstName" value="{{customerFirstName}}" required>
                    </div>
                    <div class="form-group">
                        <label for="customerLastName">Last Name</label>
                        <input type="text" class="form-control" name="customerLastName" value="{{customerLastName}}" required>
                    </div>
                    <div class="form-group">
                        <label for="customerEmail">E-Mail</label>
                        <input type="email" class="form-control" name="customerEmail" value="{{customerEmail}}" required>
                        <p id="customerEmailInvalidMessage"></p>
                    </div>
                    <div class="form-group">
                        <label for="customerStreet">Address</label>
                        <input type="text" class="form-control" name="customerStreet" value="{{customerStreet}}">
                    </div>
                    <div class="form-group">
                        <label for="customerCity">City</label>
                        <input type="text" class="form-control" name="customerCity" value="{{customerCity}}">
                    </div>
                    <div class="form-group">
                        <label for="customerState">State</label>
                        <input type="text" class="form-control" name="customerState" maxlength="2" value="{{customerState}}">
                    </div>
                    <div class="form-group">
                        <label for="customerZipCode">Zip Code</label>
                        <input type="text" class="form-control" name="customerZipCode" pattern="(\d{5}([\-]\d{4})?)" value="{{customerZipCode}}">
                    </div>
                    <div class="form-group">
                        <label for="customerPhone">Phone Number</label>
                        <input type="text" class="form-control" name="customerPhone" pattern="\d{3}[\-]\d{3}[\-]\d{4}" value="{{customerPhone}}" required>
                    </div>
                    <div class="form-group">
                        <label for="customerDriverLicense">Drivers License</label>
                        <input type="text" class="form-control" name="customerDriverLicense" value="{{customerDriverLicense}}">
                    </div>
                    <div class="form-group">
                        <label for="customerComment">Extra Comments</label>
                        <input type="text" class="form-control" name="customerComment" value="customerComment" >
                    </div>
                    <div class="form-group">
                        <label for="customerWaiver">Waiver Signed?</label></br>
                        <a class="btn btn-info" onclick="waiverYes()" > Yes </a>
                        <input id="customerWaiver" name="customerWaiver" type="hidden" value="0">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-info"><i class="zmdi zmdi-file-plus"></i>&nbsp;Save</button>
                        <a href="customers.php" class="btn btn-info"><i class="zmdi zmdi-undo"></i>&nbsp;Cancel</a>
                        {{# admin }}
                            <a class="btn btn-danger" id="deleteButton" href="customers.php?action=delete&customerID={{customerID}}" title="Delete this customer"><i class="zmdi zmdi-delete"></i>&nbsp;Delete</a>
                        {{/ admin }}
                    </div>
                </form>
            </div>
        </div>
        {{/ customers}}
    </div>
</div>
{{/ content}}

{{$ scripts }}
<script src="../js/customers.js"></script>
{{/ scripts }}
{{/ layout }}
