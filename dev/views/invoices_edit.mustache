{{< layout }}
{{$ title }}Invoices Edit{{/ title }}

{{$ header }}

{{/ header }}

{{$ content}}<div class="panel panel-default">
    <div class="panel-heading">Edit this reservation</div>
    <div class="panel-body">

    {{< invoice_modal}}

    {{/ invoice_modal}}

    <div class="row">
            {{# Invoices}}
                <div class="col-md-3">
                    <h4>Current Reservation:</h4>
                    <p><b>Customer:</b> {{ customerFirstName }} {{ customerLastName }} </p>
                    <p><b>Start Date:</b> {{ invoiceStartDate }}</p>
                    <p><b>End Date:</b> {{ invoiceEndDate }}</p>
                    <!-- More values -->
                </div>
                <div class="col-md-9">
                    <form action="invoices.php?action=update" method="post" autocomplete="off">
                        <input type="hidden" class="form-control" name="invoiceID" placeholder="YYYY-MM-DD" value="{{invoiceID}}">
                        <div class="form-group">
                            <label for="invoiceStartDate">Start Date</label>
                            <input type="date" class="form-control" name="invoiceStartDate" id="editStartDate" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" onchange="editCheckDate()"  value="{{ invoiceStartDate }}" required>
                            <p id="startDateErrorMessage"></p>
                        </div>
                        <div class="form-group">
                            <label for="invoiceEndDate">End Date</label>
                            <input type="date" class="form-control" name="invoiceEndDate" id="editEndDate" placeholder="YYYY-MM-DD" pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" onchange="editCheckDate()" value="{{ invoiceEndDate }}" required>
                            <p id="endDateErrorMessage"></p>
                        </div>
                        <div class="form-group">
                            <label for="invoiceComments">Comments</label>
                            <input type="text" class="form-control" name="invoiceComments" id="editComments" value="{{ invoiceComments }}">
                        </div>
                        <ul id="invoiceItemsList{{invoiceID}}" class="list-group">

                        </ul>
                        <div class="form-group">
                            <a class="btn btn-info" onclick="getInvoiceItems({{invoiceID}})" title="View invoice items"><i class="zmdi zmdi-format-list-bulleted"></i></a>
                            <button type="submit" id="saveButton" class="btn btn-info"><i class="zmdi zmdi-file-plus"></i>&nbsp;Save</button>
                            <a href="invoices.php" class="btn btn-info"><i class="zmdi zmdi-undo"></i>&nbsp;Cancel</a>
                        </div>

                    </form>
                </div>
            {{/Invoices}}
        </div>
    </div>
</div>
{{/ content}}

{{$ scripts }}
<!-- bootbox code -->
<script src="../js/vendor/bootbox.min.js"></script>
<script src="../js/createCart.js"></script>
<script src="../js/invoices.js"></script>
{{/ scripts }}
{{/ layout }}
