<!-- Begin Modals section for different alerts and dialogs -->
    <!-- Build Cart Modal - replaces buildCart() -->
    <div class="modal fade" id="buildCartModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4>Build a cart</h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" onsubmit="return false;">
                        <div class="form-group">
                            <label class="col-md-4 control-label" >Customer Name</label>
                            <div class="col-md-4">
                                <input id="customerSearch" class="form-control input-md" type="text" onchange="findCustomer()"  placeholder="Search by name/phone" >
                            </div> <br/><br/>
                            <p id="searching"></p>
                            <ul id="nameMessage"></ul>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" >Start Date</label>
                            <div class="col-md-4">
                                <input id="cartStartDate" name="cartStartDate" type="date" class="form-control input-md" placeholder="YYYY-MM-DD"  pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" onchange="checkDate()" required>
                                <p id="startDateInvalidMessage"></p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" >End Date</label>
                            <div class="col-md-4">
                                <input id="cartEndDate" name="cartEndDate" type="date" class="form-control input-md" placeholder="YYYY-MM-DD"  pattern="[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|1[0-9]|2[0-9]|3[01])" onchange="checkDate()" required>
                                <p id="endDateInvalidMessage"></p>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label" >Trip Description</label>
                            <div class="col-md-4">
                                <input id="cartComments"  class="form-control input-md" name="cartComment" type="text" onchange="checkComments()" required>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <div id="successMessage">
                        <button class="btn btn-lg btn-info" type="submit" id="createButton" onclick="createCart()"><i class="zmdi zmdi-hc-lg zmdi-check-square"></i></button>
                        <p id="creating"></p>
                        <p id="inputInvalidMessage"></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Delete Cart Modal -->
    <div class="modal fade" id="deleteCartModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete this cart?</h4>
                </div>
                <div class="modal-body">
                    <p>You cannot undo this operation.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="deleteCart()" class="btn btn-info btn-danger" data-dismiss="modal">Delete</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Delete Cart Item Modal -->
    <div class="modal fade" id="deleteCartItemModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Delete this cart item?</h4>
                </div>
                <div class="modal-body">
                    <p>You cannot undo this operation.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" onclick="deleteCartItem()" class="btn btn-info btn-danger" data-dismiss="modal">Delete Item</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Package Modal -->
    <div class="modal fade" id="packageModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="Modal Title">Select a package from the list.</h4>
                </div>
                <div class="modal-body">
                    <ul id="packageList"></ul>
                </div>
            </div>
        </div>
    </div>
    <!-- Select Items Modal -->
    <div class="modal fade" id="selectItemsModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Enter number of packages.</h4>
                    <input id="numberOfPackages" onchange="noNegatives()" class="form-control input-sm" type="number" placeholder="# of packages" required>
                    <br/>
                </div>
                <div class="modal-body">
                    <h4 class="modal-title">Select items from the list.</h4>
                    <ul id="itemList" class="list-group">
                    </ul>
                </div>
                <div class="modal-footer">
                    <p id="enterNumberMessage"></p>
                    <input type="hidden" id="hiddenCartID" >
                    <input type="hidden" id="hiddenPackageID" >
                    <a class="btn btn-info" onclick="finishPackage()">Finished</a>
                </div>
            </div>
        </div>
    </div>
<!-- End Modals section -->